<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rubiks Cube</title>

    <!-- Bootstrap 5.0 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- CSS Style Sheet -->
    <link rel="stylesheet" href="css/styles.css">
</head>

<body>

    <div class="cube">
        <div class="face displayF">
            <div class="box green" id="FUL1"></div>
            <div class="box green" id="FU1"></div>
            <div class="box green" id="FUR2"></div>
            <div class="box green" id="FL1"></div>
            <div class="box green"></div>
            <div class="box green" id="FR1"></div>
            <div class="box green" id="FDL2"></div>
            <div class="box green" id="FD1"></div>
            <div class="box green" id="FDR1"></div>
        </div>

        <div class="face displayU">
            <div class="box yellow" id="BUL0"></div>
            <div class="box yellow" id="BU0"></div>
            <div class="box yellow" id="BUR0"></div>
            <div class="box yellow" id="UL0"></div>
            <div class="box yellow"></div>
            <div class="box yellow" id="UR0"></div>
            <div class="box yellow" id="FUL0"></div>
            <div class="box yellow" id="FU0"></div>
            <div class="box yellow" id="FUR0"></div>
        </div>

        <div class="face displayR">
            <div class="box orange" id="FUR1"></div>
            <div class="box orange" id="UR1"></div>
            <div class="box orange" id="BUR2"></div>
            <div class="box orange" id="FR0"></div>
            <div class="box orange"></div>
            <div class="box orange" id="BR0"></div>
            <div class="box orange" id="FDR2"></div>
            <div class="box orange" id="DR1"></div>
            <div class="box orange" id="BDR1"></div>
        </div>

        <div class="face displayL">
            <div class="box red" id="FUL2"></div>
            <div class="box red" id="UL1"></div>
            <div class="box red" id="BUL1"></div>
            <div class="box red" id="FL0"></div>
            <div class="box red"></div>
            <div class="box red" id="BL0"></div>
            <div class="box red" id="FDL1"></div>
            <div class="box red" id="DL1"></div>
            <div class="box red" id="BDL2"></div>
        </div>

        <div class="face displayD">
            <div class="box white" id="BDL0"></div>
            <div class="box white" id="BD0"></div>
            <div class="box white" id="BDR0"></div>
            <div class="box white" id="DL0"></div>
            <div class="box white"></div>
            <div class="box white" id="DR0"></div>
            <div class="box white" id="FDL0"></div>
            <div class="box white" id="FD0"></div>
            <div class="box white" id="FDR0"></div>
        </div>

        <div class="face displayB">
            <div class="box blue" id="BUL2"></div>
            <div class="box blue" id="BU1"></div>
            <div class="box blue" id="BUR1"></div>
            <div class="box blue" id="BL1"></div>
            <div class="box blue"></div>
            <div class="box blue" id="BR1"></div>
            <div class="box blue" id="BDL1"></div>
            <div class="box blue" id="BD1"></div>
            <div class="box blue" id="BDR2"></div>
        </div>

    </div>

    <div class="control-panel">

        <a role="button" href="/results" class="btn btn-info">results</a>

        <div class="username">
            <% if(user != undefined) { %>

            <h2>User: <%= user.username %></h2>

            <% } else { %>
            <h2>Guest</h2>
            <% } %>

            <a role="button" href="/logout" class="btn btn-danger">Logout</a>
        </div>

        <div class="stopwatchDisplay">
            <button type="button" class="startTimer btn btn-success">Start</button>
            <button type="button" class="reset btn btn-outline-secondary">Reset</button>
            <button type="button" class="shuffle btn btn-outline-danger">Shuffle</button>
            <div class="displayBox">
                <p id="stopwatchDisplayText">0</p>
            </div>
            <div class="displayBox">
                <p id="stepsDisplayText">0</p>
            </div>
        </div>


        <div class="button-group">
            <div class="btn-group-vertical">
                <button type="button" class="btn btn-primary" id="R0">R</button>
                <button type="button" class="btn btn-outline-primary" id="R1">R'</button>
            </div>

            <div class="btn-group-vertical">
                <button type="button" class="btn btn-primary" id="U0">U</button>
                <button type="button" class="btn btn-outline-primary" id="U1">U'</button>
            </div>

            <div class="btn-group-vertical">
                <button type="button" class="btn btn-primary" id="D0">D</button>
                <button type="button" class="btn btn-outline-primary" id="D1">D'</button>
            </div>

            <div class="btn-group-vertical">
                <button type="button" class="btn btn-primary" id="F0">F</button>
                <button type="button" class="btn btn-outline-primary" id="F1">F'</button>
            </div>

            <div class="btn-group-vertical">
                <button type="button" class="btn btn-primary" id="L0">L</button>
                <button type="button" class="btn btn-outline-primary" id="L1">L'</button>
            </div>

            <div class="btn-group-vertical">
                <button type="button" class="btn btn-primary" id="B0">B</button>
                <button type="button" class="btn btn-outline-primary" id="B1">B'</button>
            </div>
        </div>
    </div>




    <!-- Bootstrap 5.0 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
    </script>

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- js File -->
    <script src="cube.js"></script>
</body>

</html>